@model Music_Portal.Models.User

@{
    ViewBag.Title = @Music_Portal.Resources.Resource.EditUser;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #374566; box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.1), 0.3em 0.3em 1em black; border-radius: 15px; width: 500px">
    <p class="font" style="font-size: 32px; color: white; padding-top: 30px; text-align: center">@Music_Portal.Resources.Resource.EditUser</p>
    <hr style="color: white" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" style="margin: 20px; margin-left: 65px; width: 370px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Password" />
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccessLevel" class="control-label" style="color: white" class="font"></label>
                <input asp-for="AccessLevel" class="form-control" />
                <span asp-validation-for="AccessLevel" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group" style="margin-left: 135px">
                <input type="submit" value="@Music_Portal.Resources.Resource.Save" class="btn btn-primary" />
            </div>
        </form>
        <br />
    </div>
</div>
</div>
<br />
<div>
    <a asp-action="UsersList"style="text-decoration:none; color: black">&lt;&lt;@Music_Portal.Resources.Resource.BackToList</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}