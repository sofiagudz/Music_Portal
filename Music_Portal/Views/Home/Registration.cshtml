@model Music_Portal.Models.RegistrationModel

@{
    ViewBag.Title = @Music_Portal.Resources.Resource.Registration;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@Music_Portal.Resources.Resource.Registration</title>
</head>
<body>
    <div class="row">
    <div class="col-md-4" style="width: 500px;">
        <br />
        
            @if (this.Context.Session.GetString("Login") == null){
         <div style="background-color: #374566; box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.1), 0.3em 0.3em 1em black; border-radius: 15px; width: 500px">
             <p class="font" style="font-size: 32px; color: white; padding-top: 30px; text-align: center">@Music_Portal.Resources.Resource.Registration</p>
             <hr style=" color: white">
         <form asp-action="Registration" style="width: 350px; margin-left: 75px">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label" style="color: white" class="font"></label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group" style="margin-left: 110px">
                <input type="submit" value="@Music_Portal.Resources.Resource.Registration" class="btn btn-primary" />
            </div>
            <br />
        </form>
        </div>
            }
            else{
                <div>
                    <div>
                        @Music_Portal.Resources.Resource.RegistrationError
                    </div>
                    <br/>
                    <br/>
                </div>
            }
        
    </div>
</div>
   
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}