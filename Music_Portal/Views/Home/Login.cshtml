@model Music_Portal.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 
<div style="background-color: #374566; box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.1), 0.3em 0.3em 1em black; border-radius: 15px; width: 500px">
    <p class="font" style="font-size: 32px; color: white; padding-top: 30px; text-align: center">Авторизация</p>
    <hr style=" color: white">
<div class="row">
    <div class="col-md-4">
        <br />
        <form asp-action="Login" style="width: 350px; margin-left: 75px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style="color: white" class="font"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group" style="margin-left: 145px">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </form>
        <br />
    </div>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}