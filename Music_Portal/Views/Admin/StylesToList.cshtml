@model IEnumerable<Music_Portal.Models.Style>

@{
    ViewBag.Title = @Music_Portal.Resources.Resource.Styles;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <p class="font" style="font-size: 32px; padding-top: 33px;">@Music_Portal.Resources.Resource.Styles</p>
    <a asp-action="AddStyle">@Music_Portal.Resources.Resource.AddStyle</a>
    <br />
    <div style="background-color: #374566; box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.1), 0.3em 0.3em 1em black; border-radius: 15px;">
    <br />
        <table class="table">
        <thead>
            <tr>
                <th style="color: white" class="font">@Html.DisplayNameFor(model=>model.Name)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var t in Model)
                {
                    <tr>
                        <td style="color: white" class="font">@Html.DisplayFor(modelItem=>t.Name)</td>
                        <td>
                            <a asp-action="EditStyle" asp-route-id="@t.Id">@Music_Portal.Resources.Resource.Edit</a>
                            <a asp-action="DeleteStyle" asp-route-id="@t.Id">@Music_Portal.Resources.Resource.Delete</a>
                        </td>
                    </tr> 
                }
            }
        </tbody>
    </table>
    <br />
    </div>
</div>
